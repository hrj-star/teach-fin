<%- include("./partials/header") %>

<img class="wave" src="static/img/wave.png" alt="">
	<div class="container">
		<div class="img">
			<img src="static/img/bg.svg" alt="">
		</div>
		<div class="login-content">
			<form action="/login" method="POST">
                <img src="static/img/avatar.svg" alt="">
                <a href="/" class="btn btn-primary mb-5">Go Back</a>
                <h2 class="title">Login</h2>
                <% if (message){ %>
                    <div style="text-align:center  ; color: red" class="<%= message.type %>">
                        <button type="button" class="close"  aria-hidden="true" data-dismiss="alert"><i class="fa fa-close" style="font-size:48px;color:red"></i></button>
                        <strong><%= message.intro %></strong><%= message.message %>
                
                      
                    </div>
                    <% } %>
           		<div class="input-div one">
           		   <div class="i">
           		   		<i class="fas fa-user"></i>
           		   </div>
           		   <div class="div">
            

                          <label for="username">Username</label>
                          <br>
                          <br>
                          <input type="text" name="username"  id="username" >
           		   </div>
           		</div>
           		<div class="input-div pass">
           		   <div class="i"> 
           		    	<i class="fas fa-lock"></i>
           		   </div>
           		   <div class="div">
                          <!--
           		    	<h5>Password</h5>
                           <input type="password"  id="inputpassword" class="input">
                          -->
                          <label for="password">Password</label>
                          <br>
                          <br>
                          <input type="password" name="password"  id="password">
            	   </div>
            	</div>
            	<a href="#">Forgot Password?</a>
            	<button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
































































